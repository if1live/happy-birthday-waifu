<%= link_to about_welcome_index_path, class: "button bg-darkRed bg-hover-red fg-white large" do %>
	자세히 &raquo;
<% end %>

<% if @today_list.length > 0 %>
  <section class="clearfix">
	  <h2>오늘(<time><%= @month %>월 <%= @day %>일</time>)</h2>
	  <% @today_list.each do |character| %>
      <%= render 'simple_tile', character: character, date: @today %>
	  <% end %>
  </section>
<% end %>

<% if @tomorrow_list.length > 0 %>
  <section class="clearfix">
	  <h2>내일(<time><%= @tomorrow_month %>월 <%= @tomorrow_day %>일</time>)</h2>
	  <% @tomorrow_list.each do |character| %>
      <%= render 'simple_tile', character: character, date: @today %>
	  <% end %>
  </section>
<% end %>

<% if @approach_list %>
  <section class="clearfix">
	  <h2>Coming soon</h2>
	  <% @approach_list.each do |character| %>
      <%= render 'simple_tile', character: character, date: @today %>
	  <% end %>
  </section>
<% end %>


<section>
  <%= render_shareable :turbolinks => true,
  :buttons => ['twitter', 'google_plus', 'tumblr', 'facebook'],
  :facebook => {:turbolinks => false} %>
</section>

