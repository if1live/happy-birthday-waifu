<% if @today_list %>
  <section>
	<h2>오늘(<time><%= @month %>월 <%= @day %>일</time>)</h2>
  <div class="row">
	<% @today_list.each do |character| %>
    <div class="col-sm-4">
      <%= render 'simple_card', character: character, date: @today %>
    </div>
	<% end %>
  </div>
  </section>
<% end %>

<% if @tomorrow_list %>
  <section>
	<h2>내일(<time><%= @tomorrow_month %>월 <%= @tomorrow_day %>일</time>)</h2>
  <div class="row">
	<% @tomorrow_list.each do |character| %>
    <div class="col-sm-4">
      <%= render 'simple_card', character: character, date: @today %>
    </div>
	<% end %>
  </div>
  </section>
<% end %>

