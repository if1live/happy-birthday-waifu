<h2>External Link</h2>
<ul>
  <% if @character.external_url %>
  <li>
	<%= link_to "외부 링크", @character.external_url %>
  </li>
  <% end %>
  <li>
	<%= link_to "Anime Characters Database", @character.anime_character_db_url %>
  </li>
</ul>

<section>
<%= render_shareable :turbolinks => true,
:buttons => ['twitter', 'google_plus', 'tumblr', 'facebook'],
:facebook => {:turbolinks => false} %>
</section>

